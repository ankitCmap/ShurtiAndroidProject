<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.lock.the.box.adapter.helper.ShurtiApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShurtiAndroidProject"
        tools:targetApi="31">
        <activity
            android:name="com.lock.the.box.ui.DetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.ShurtiAndroidProject"/>
        <activity
            android:name="com.lock.the.box.ui.SocialActivity"
            android:exported="false"
            android:theme="@style/Theme.ShurtiAndroidProject"/>
        <activity
            android:name="com.lock.the.box.ui.MainActivity"
            android:exported="false"
            android:theme="@style/MainActivityThem"/>

        <activity android:name="com.lock.the.box.ui.LoginSignupActivity"
            android:exported="false"
            android:theme="@style/Theme.ShurtiAndroidProject"/>
        <activity
            android:name="com.lock.the.box.ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ShurtiAndroidProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lock.the.box.ui.ChangePasswordActivity"
            android:exported="true"/>



        <activity
            android:name="com.lock.the.box.ui.NewMainActivity"
            android:exported="true"/>
        <activity
            android:name="com.lock.the.box.ui.SignUpActivity"
            android:exported="true"/>
        <activity android:name="com.lock.the.box.ui.LoginWithPasswordActivity"
            android:exported="true"/>
        <activity android:name="com.lock.the.box.ui.OtpVerificationActivity"
            android:exported="true"/>
        <activity android:name="com.lock.the.box.ui.CartActivity"
            android:exported="true"/>
        <activity android:name="com.lock.the.box.ui.EditProfileActivity" />

    </application>

</manifest>