<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".helper.ShurtiApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShurtiAndroidProject"
        tools:targetApi="31">
        <activity
            android:name=".ui.DetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.ShurtiAndroidProject"/>
        <activity
            android:name=".ui.SocialActivity"
            android:exported="false"
            android:theme="@style/Theme.ShurtiAndroidProject"/>
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/MainActivityThem"/>

        <activity android:name=".ui.LoginSignupActivity"
            android:exported="false"
            android:theme="@style/Theme.ShurtiAndroidProject"/>
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ShurtiAndroidProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.shurtiandroidproject.ui.ChangePasswordActivity" />
        <activity
            android:name="com.example.shurtiandroidproject.ui.DashbordActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ShurtiAndroidProject.NoActionBar" />

    </application>

</manifest>