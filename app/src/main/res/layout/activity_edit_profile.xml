<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.MaterialComponents.Light"
        tools:context=".ui.EditProfileActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"/>


        <LinearLayout
            android:id="@+id/successProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_profile">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/success_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:text="Password changed successfully!"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_horizontal"
                android:text="Congratulations! Your password has been changed successfully."
                android:textColor="#828282"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/p_BackBtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Go Back"
                android:textAllCaps="false"
                android:textColor="#F25822"
                android:textSize="17sp"
                app:cornerRadius="5dp"
                app:rippleColor="@color/dark_gray"
                app:strokeColor="#F25822"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/mainProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_profile">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="0dp"
                        app:cardCornerRadius="360dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/p_imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/red_color" />

                        <TextView
                            android:id="@+id/p_imageText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:text="D"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:elevation="0dp"
                        app:cardCornerRadius="360dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/p_pick_image_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:src="@drawable/camera_icon" />
                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/bg_edit_text"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <EditText
                            android:digits="@string/everything"
                            android:id="@+id/p_nameEt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="left|center_vertical"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:scrollHorizontally="true"
                            android:text="Username"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:theme="@style/BookChorTheme.Main" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/p_genderMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/radio_button_new"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Male"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="15sp"
                            android:theme="@style/Theme.MaterialComponents.Light"
                            app:buttonTint="@color/radio_button_new" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/p_genderFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/radio_button_new"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Female"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="15sp"
                            android:theme="@style/Theme.MaterialComponents.Light"
                            app:buttonTint="@color/radio_button_new" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/p_genderOther"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/radio_button_new"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Other"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:theme="@style/Theme.MaterialComponents.Light"
                            app:buttonTint="@color/radio_button_new" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text="Mobile Number"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/bg_edit_text"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <EditText
                            android:digits="@string/everything"
                            android:id="@+id/p_phoneEt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/transparent"
                            android:focusable="false"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="left|center_vertical"
                            android:inputType="phone"
                            android:maxEms="10"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:theme="@style/BookChorTheme.Main" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:focusable="true"
                            android:fontFamily="@font/poppins_regular"
                            android:maxLines="1"
                            android:text="Update"
                            android:textColor="#2F80ED"
                            android:textSize="17sp"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/bg_edit_text"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <EditText
                            android:digits="@string/everything"
                            android:id="@+id/p_emailEt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/transparent"
                            android:focusable="false"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="left|center_vertical"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:scrollHorizontally="true"
                            android:text="user1@bookchor.com"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:theme="@style/BookChorTheme.Main" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:focusable="true"
                            android:fontFamily="@font/poppins_regular"
                            android:maxLines="1"
                            android:text="Update"
                            android:textColor="#2F80ED"
                            android:textSize="17sp"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/p_UpdateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#F25822"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    app:cornerRadius="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/goto_deleteAccount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="1"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:padding="10dp"
                        android:text="Delete Account"
                        android:textColor="#2F80ED"
                        android:textSize="17sp" />
                    <TextView
                        android:id="@+id/goto_changePassword"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="right"
                        android:focusable="true"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="1"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:padding="10dp"
                        android:text="Change Password"
                        android:textColor="#2F80ED"
                        android:textSize="17sp" />


                </LinearLayout>



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/p_LogoutBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textColor="#828282"
                    android:textSize="17sp"
                    app:cornerRadius="5dp"
                    android:visibility="gone"
                    app:icon="@drawable/ic_round_power_settings_new_24"
                    app:iconGravity="textEnd"
                    app:iconTint="#828282"
                    app:rippleColor="@color/dark_gray"
                    app:strokeColor="#828282"
                    app:strokeWidth="1dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

