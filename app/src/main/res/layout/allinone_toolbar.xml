<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:elevation="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:id="@+id/card_bookchor"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/bc_layout"
                    android:background="@drawable/selected_top_tab"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:src="@mipmap/ic_launcher"
                        android:padding="@dimen/_2sdp"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/_35sdp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/card_ltb"
                app:cardCornerRadius="@dimen/_8sdp"
                android:elevation="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/ltb_layout"
                    android:background="@drawable/rounded_cornor_edittext"

                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:src="@drawable/ltb_icon"
                        android:padding="@dimen/_2sdp"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/_35sdp"></ImageView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:id="@+id/card_dump"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_8sdp"
                android:elevation="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/dump_layout"
                    android:background="@drawable/rounded_cornor_edittext"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:src="@drawable/dump_icon"
                        android:padding="@dimen/_2sdp"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/_35sdp"></ImageView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/main_toolbbar_all_SearchView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:background="@drawable/search_bar_bg"
        android:drawableLeft="@drawable/baseline_search_24"
        android:drawablePadding="@dimen/_10sdp"
        android:focusable="true"
        android:layout_marginVertical="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:padding="@dimen/_5sdp"
        android:text="Search Books, ISBN"
        android:textSize="@dimen/_12ssp"
        android:drawableRight="@drawable/ic_baseline_document_scanner_24"

        app:iconifiedByDefault="false" />

</LinearLayout>