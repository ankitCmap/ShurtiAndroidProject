<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainData"
            type="com.lock.the.box.viewmodel.MainVM" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DetailsActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <include
                    android:id="@+id/hederbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/main_action_bar" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:scaleType="centerCrop"
                app:imageUrl="@{mainData.item.strMealThumb}"
                tools:ignore="ContentDescription,MissingConstraints" />
            <TextView
                android:id="@+id/tvId"
                android:text="@{mainData.item.strArea}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/primary_red"/>

            <TextView
                android:id="@+id/tvName"
                android:text="@{mainData.item.strInstructions}"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:layout_marginHorizontal="@dimen/_10sdp"/>
        </LinearLayout>

    </ScrollView>

</layout>