<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.CartActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/baseline_close_24"


                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/iv_back"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/shortlisted_books"
                        android:textAlignment="center"
                        android:textColor="#151515"
                        android:textSize="@dimen/_16ssp" />
                </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray4"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:background="@color/ltb_color"
                android:layout_gravity="center_horizontal"
                android:text="@string/book_will_be_automatically"
                android:textColor="@color/red_text"
                android:fontFamily="@font/poppins_regular"
                android:padding="@dimen/_5sdp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/your_selected_box"
                android:textSize="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:textColor="@color/textColor"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_semibold"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:id="@+id/fl_small_box"
                        android:padding="@dimen/_1sdp"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:focusable="true">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_small_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:visibility="visible"
                            android:src="@drawable/greenbox"
                            />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_small_count"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:visibility="visible"
                            android:layout_gravity="right|top"
                            android:layout_marginTop="11dp"
                            android:layout_marginEnd="13dp"
                            android:background="@drawable/circle_bg_notification"
                            android:gravity="center"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_medium_box"
                        android:padding="@dimen/_1sdp"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:focusable="true">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_medium_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:visibility="visible"
                            android:src="@drawable/orangebox" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_medium_count"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:visibility="visible"
                            android:layout_gravity="right|top"
                            android:layout_marginTop="11dp"
                            android:layout_marginEnd="13dp"
                            android:background="@drawable/circle_bg_notification"
                            android:gravity="center"
                            android:text="3"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_large_box"
                        android:padding="@dimen/_1sdp"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:focusable="true">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_large_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:visibility="visible"
                            android:src="@drawable/pinkbox" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_large_count"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:visibility="visible"
                            android:layout_gravity="right|top"
                            android:layout_marginTop="11dp"
                            android:layout_marginEnd="13dp"
                            android:background="@drawable/circle_bg_notification"
                            android:gravity="center"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />
                    </FrameLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_add"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_5sdp"
                        app:srcCompat="@drawable/add_ic_circle"/>

                </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_progress_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp">


                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_percentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    app:trackColor="@color/lightgrey"
                    app:trackCornerRadius="@dimen/_10sdp"
                    app:trackThickness="@dimen/_20sdp"
                    android:max="100"
                    app:indicatorColor="@color/red_color"
                    app:layout_constraintEnd_toEndOf="parent"
                   />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/_0_occupied"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_bold"
                    />

            </FrameLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_0_books_added"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/textColor"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_bold"
                />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
