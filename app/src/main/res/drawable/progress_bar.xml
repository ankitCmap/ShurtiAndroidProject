<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="600"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080" >

    <shape
        android:innerRadius="@dimen/_16sdp"
        android:shape="ring"
        android:thickness="@dimen/_3sdp"
        android:useLevel="false" >
        <size
            android:height="@dimen/_120sdp"
            android:width="@dimen/_120sdp" />

        <gradient
            android:centerColor="@color/primary_blue"
            android:centerY="0.5"
            android:endColor="@color/primary_blue_dark"
            android:startColor="#001E8755"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>

